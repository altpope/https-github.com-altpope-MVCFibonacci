@model Web.Models.FibonacciViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- TODO: Copied from UI flat file... not implemented -->
<h2>Display a list of Fibonacci numbers</h2>
<div class="row">
    <div class="col-lg-5">
        @using (Html.BeginForm("Index", "Fibonacci", FormMethod.Post))
        {
            <div class="form-group">
                <label for="numbers">Numbers to display:</label>
                <input type="text" class="form-control" id="numbers" name="number">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Generate</button>
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-lg-5">
        <div class="well">Results</div>
    </div>
</div>

@if (Model.HasResults)
{
    <table>
        @foreach (var item in Model.Results)
        {
            <tr>
                <td>
                    <div class="col-lg-4">
                        @item.ToString()
                    </div>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-info">
        @("Number must be a positive integer of smallish value");
    </div>
}

